<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" DefaultTargets="Tests"
         xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <NUnitRunnerDir>$(SolutionDir)packages\NUnit.Runners.2.6.2\tools</NUnitRunnerDir>
  </PropertyGroup>

  <Target Name="Tests" AfterTargets="AfterBuild" Condition="'$(Configuration)'=='Release'">
    <Exec Command="&quot;$(NUnitRunnerDir)\nunit-console.exe&quot; &quot;$(TargetPath)&quot; /framework=4.0.30319" />
  </Target>
</Project>